print("Ingrese los datos requeridos:")

apellido = input("Apellido:")

edad = int(input("Edad(18 a 90):"))
while edad < 18 or edad > 90:
    print("Edad invalida. Debe estar entre 18 y 90 años.")
    edad = int(input("Edad(18 a 90):"))

estado_civil = input("Estado civil(Soltero/a, Casado/a, Divorciado/a, Viudo/a):")
while estado_civil != "Soltero/a" and estado_civil != "Casaso/a" and estado_civil != "Divorciado/a" and estado_civil != "Viudo/a":
    print("Estado civil invalido. Debe ser Soltero/a, Casaso/a, Divorciado/a o Viudo/a.")
    estado_civil = input("Estado civil(Soltero/a, Casado/a, Divorciado/a, Viudo/a):")

legajo = int(input("Numero de legajo(4 cifras, sin ceros a la izquierda):"))
while legajo < 1000 or legajo > 9999:
    print("Numero de legajo invalido. Debe tener 4 cifras y no comenzar con 0.")
    legajo = int(input("Numero de legajo(4 cifras, sin ceros a la izquierda):"))

print("DATOS INGRESADOS")
print("Apellido:", apellido)
print("Edad:", edad)
print("Estado civil:", estado_civil)
print("Número de legajo:", legajo)